\noindent We will use the following notation.
\begin{notation}
\begin{itemize}
\item[] $\overline{X} := \Pspace^1_{\C}$
\item[] $D$ is a divisor on $\overline{X}$ with $D(\C) = \{ \infty, a_1, \ldots, a_r \}$ such that $r \geq 0$ and $a_1, \ldots, a_r \in \overline{X}(k)$.
\item[] $X := \overline{X} \setminus D$.
\item[] $k$ is a field of characteristic 0 with an inclusion $k \inj \C$.
\item[] $a, b \in X(k)$.
\item[] $M = X(\C)$ is a manifold.
\end{itemize}
\end{notation}

\section{Explicit Definition of $\cO(\pi_n(X;a,b)_H)$}
Fix an integer $n > 0$. 

The first goal will be to define $\cO(\pi_1(X;a,b)_H) = \varinjlim_n V_n$.
\begin{enumerate}
\item {\bf Define the weight filtration on $V_n$.}
Let $V_n$ be the $\Q$-vector space $\Q_{a,b} \oplus H^n(X^n, Z^n_{a,b})$, (Cf. Definition \ref{defn:Zab}) and let $V^M_{n+1} = \Q[\pi_1(M;a,b)] / I^{n+1}$.

Dualizing Chen's isomorphism $c_n$ of Theorem \ref{thm:chen} gives an isomorphism of $\Q$-vector spaces,
\[
c_n^{\vee} : V_n \to V^M_{n+1}.
\]
This has weight filtration
\[
W_{2m}V_n = \left\{ \begin{array}{ll}
0 & m \leq -1 \\
(c_n^v)^{-1}V_m' & 0 \leq m \leq n-1 \\
V_n &  n \leq m
\end{array} \right.
\]
\item {\bf Define Hodge filtration on $V_n \otimes_{\Q} \C$.}

Let $\Omega$ be the $k$-vector space of algebraic differential 1-forms on $\overline{X}$ with at most first order poles along $D$, i.e.,
\[
\Omega = H^0(\overline{X}, \Omega_{\overline{X}}^1(\log D)) \cong H_{dR}^1(X)
\]
and
\[
\Omega = \mathrm{span}_K \left\{ \frac{dz}{z-a_1}, \ldots, \frac{dz}{z-a_r} \right\}
\]
Recall that the path space of $M$ is
\[
PM = \{ \textrm{piecewise smooth functions $[0,1] \to M$} \}.
\]
\begin{defn}[Chains]
Let the chains $Ch(\Omega)$ of $\Omega$ be the $k$-vector space generated by the constant functions and the iterated integrals \[
\int \omega_1, \ldots, \omega_{\ell} : PM \to \C, \qquad \ell > 0, \quad \omega_1, \ldots, \omega_{\ell} \in \Omega
\]
It is a $k$-algebra with multiplication given by the shuffle product of iterated integrals.
\end{defn}
\begin{defn}[Length filtration on Chains]
The \emph{length} of the integral (which depends on how we've written it) is $\mathrm{length}(\int \omega_1 \cdots \omega_{\ell}) := \ell$. The length function defines a filtration on $Ch(\Omega)$ (and $CH(\Omega)_{\C}$).
\[
L_n Ch(\Omega) = \left\langle c, \int \omega_1 \cdots \omega_{\ell} \mid 1 \leq \ell \leq n, c \in k \right\rangle_k
\]
\end{defn}
\begin{defn}[Weight filtration on Chains]
The weight filtration on the chains is
\[
W_{2m} = \left\{ \begin{array}{ll}
0 & m \leq -1 \\
(Ch)^{-1} V^M_m & 0 \leq m \leq n-1 \\
V_n & n \leq m
\end{array} \right.
\]
\end{defn}

\begin{lemma}
There is an isomorphism $\varphi : Ch(\Omega)_{\C} \to \cO(\pi_1(C;a,b)_B)$ such that $\varphi(L_n Ch(\Omega)) = V_n \otimes_{\Q} \C$.
\end{lemma}
\begin{proof}(Idea)
\[\label{eq:tlambda}
T(\Omega) = \cO(\pi_1(X;a,b)_{dR}
\]
\[
\begin{array}{rcll}
\cO(\pi_1(X;a,b)_H) \otimes_{\Q} \C & = & \cO(\pi_1(X;a,b)_B) \otimes_{\Q} \C & c^{\vee} \\
& \cong & \cO(\pi_1(X;a,b)_{dR}) \otimes_{\Q} \C & \mathrm{comp} \\
& \cong & H^0(B(A_X);a,b) \otimes_{\Q} \C & \\
& \cong & T(\Omega) \otimes_k \C & \textrm{Equation~} \ref{eq:tlambda} \\
& \cong & Ch(\Omega)_{\C} &
\end{array}
\]

We calculate the bar complex associated this dg-algebra arising from the affine variety $X$. There is a quasi-isomorphism, (see Thomas' talk \TODO)
\[
A_X \cong k \oplus \Omega[-1].
\]
where $A_X$ is the algebraic de Rham complex. $0 \to k \to \Omega \to 0$. Let $\varphi : Ch(\Omega)_{\C} \to \cO(\pi_1(X;a,b)_H) \otimes_{\Q} \C$ be the resulting isomorphism. One can check that $\varphi(L_nCh(\Omega)) = V_n \otimes_{\Q} \C$, hence the statement.
\end{proof}

\begin{rem}
The map length defines a grading on $Ch(\Omega)$ (and $Ch(\Omega)_{\C}$), and $\varphi$ is a morphism of (weight) graded $\C$-algebras.
Then $\varphi$ induces an integral,
\[
\mathrm{int} : 
\begin{array}{rcl}
Ch(\Omega)_{\C} & \to & \cO(\pi_1(X;a,b,)^{un}) \\
\int \omega_1 \cdots \omega_n & \mapsto & \{ \textrm{[$\gamma$]} \mapsto \int_{\gamma} \omega_1 \cdots \omega_l \}
\end{array}
\]
and
\[
\varphi = (c^v)^{-1} \circ \mathrm{int}
\]
\end{rem}

\begin{defn}[Hodge filtration on Chains]
The Hodge filtration is
\[
F^p(V_n \otimes_{\Q} \C) = \bigoplus_{i=p}^n \varphi(L_iCh(\Omega)_{\C})
\]
\end{defn}
The morphisms $V_n \to V_{n+1}, n \in \Z_{\geq 1}$ form a direct system in $MH$ and we denote by $\pi_1(X;a,b)_H$ the resulting affine $MH$-scheme.

\item {\bf Take the inductive limit}

\begin{lemma}
The above filtrations make $Ch(\Omega)$ into a mixed Tate-Hodge structure over $k$.
\end{lemma}
\begin{proof}
\subsubsection{Betti realization}
The Betti realization is $\pi_1(X;a,b)^{un} \cong \pi_1(X;a,b)_B$ (Cf. previous talk \TODO). Since $X$ is a punctured sphere, $\Gamma = \pi_1(X;a,b)$ is a finitely generated free group of rank $r$. As seen in Alberto's talk \TODO, this gives a $\Q$-vector space $V$ of dimension $r$ such that,
\[
\cO(\pi_1(X;a)) \cong T(V).
\]
Combining gives $\pi_1(X;a,b)_B \cong \spec T(V)$.
$H^1(\overline{X}, \cO_{\overline{X}}) = 0$ implies that $\cO(\pi_1(X;a,b)_B) = \cO(\pi_1(X;a,b)^{un}) \cong T(V)$. choose generators.
\[
V^{\vee} = \langle e_1, \ldots, e_r \rangle_{\Q}
\]

\subsubsection{De Rham Realization}
The de Rham realization is $\cO(\pi_1(X;a,b))_{dR} = T(\Omega)$.
\[
F^pT(\Omega) = \oplus_{k \geq p} \Omega^{\otimes k}
\]
\[
W_{2n}T(\Omega) = \oplus_{k \leq n} \Omega^{\otimes k}
\]
It remains to show that $\cO(\pi_1(X;a,b)_H)$ is of mixed Tate type. $\overline{X}$ is a rational variety, hence $H^1(\overline{X}, \cO_{\overline{X}}) = 0$. Thus the example of the last talk implies $\cO(\pi_1(X;a,b)_H)$ is of mixed Hodge type. (use 2 times unipotent filtr. = weight filtration on $\cO(\pi_1(X;a,b)_H)$ where unipotent is induced by the action of $\pi_1(X;a)_H).$ \TODO

\subsubsection{Periods}
The comparison isomorphism is
\[
\C \otimes_k T(\Omega) \isom \C \otimes_{Q} T(V) = \left(\C \otimes \left(\prod_{i \geq 0} (V^{vee})^{\otimes i}\right)\right)^{\vee} \cong \C \otimes \Q \langle \langle e_1, \ldots, e_n \rangle \rangle
\]
To specify an element of $\C \otimes_{\Q} T(V)$ it suffices to specify a function on $\pi_1(X;a)$, becuase of the morphism $\pi_1(X;a) \to \C \otimes_{\Q} T(V)$. In turn, to specify such a function, it suffices to give its value on generators, namely, on simple loops $\gamma_i$ around $a_i$ and based at $a$.

By the universal property of the pro-nilpotent completion, there is a map
\[
\begin{array}{rcl}
\pi_1(X; a) & \to & (\spec \cO(V))(\Q) \\
\gamma_i & \mapsto & \exp(e_i) \in \prod_{i \geq 0}(V^{vee})^{\otimes i}
\end{array}
\]
A point on this $\spec$ is a special function on functions. 

\[
(1 - \gamma_{i_1}) \cdots (1-\gamma_{i_n}) \mapsto (1-\exp(e_{i_1})) \cdots (1-\exp(e_{1_n})) \in \Q\langle \langle e_1, \ldots, e_r \rangle \rangle
\]
The period of $\gr^W_{2n} \pi_1(X;a)_H$ are given by
\[
\int_{(1-\gamma_{i_1}) \cdots (1-\gamma_{i_k})} \omega_1 \cdots \omega_n \stackrel{\textrm{calc}}{=} \prod_{j=1}^n \int_{\gamma_{i_j}} \omega_j
\]
Hence non-zero periods are $(2\pi i)^n$. 
\end{proof}

\end{enumerate}

\section{Another example (interlude by Sergey)}
Let $D = \{0, \infty \}$ so $X = \Gm$.
\begin{prop}
There is an isomoprhism in $\mathrm{Ind~} \mathrm{MTH}(k)$.
\[
\cO(\pi_1(X;a,b)_H) \cong \bigoplus_{n \geq 0} \Q(-n) = T(\Q(-1))
\]
\end{prop}

Let $V = \Q \cdot e$ and $a = b$. Let $\gamma \in \pi_1(X;a)$ be (the class of) a simple loop around 0.
\begin{eqnarray*}{ccc}
\textrm{de Rham} & & \textrm{Betti} \\
\C \otimes_k (T(\Omega) = k[\omega]) & \isom & \C \otimes_{\Q} (T(V) = \Q\langle \omega \rangle^{un}) \\
\Omega = \langle \omega = \frac{dz}{z} \rangle_k & & \pi_1(X; a) = \langle \gamma \rangle
\end{eqnarray*}
Define
\[
\mathrm{comp}(\omega^n) := (2\pi i)^n e^n.
\]
To check:
\[
\mathrm{comp}(\omega^n)(\gamma) = \int_{\gamma} \omega^n
\]
The check proceeds as:
\[
\frac{(2\pi i)^n}{n!} = \langle (2\pi i)^n e^n, \exp(\sigma) \rangle \stackrel{?}{=} \int_{\gamma} \omega^n = \frac{1}{k!} (\int_{\gamma} \omega)^n = \frac{1}{n!}(2 \pi i)^n
\]
where the right side follows from the shuffle product formula.

\[
\int_{\gamma} \omega \cdot \int_{\gamma} \omega = 2 \int_{\gamma} \omega^2
\]

We use the notation
\[
\Q(1)_H := \spec(T(\Q(-1))_H) 
\]

\section{Definition of affine MTH(k)-schemes}
We will be considering paths which leave and arrive along fixed tangent vectors in order to \TODO. We will define $\pi_1(X;u,v)$ with $u,v$ tangents as those paths which leave along $u$ and arrive along $v$. Fixing these tangent vectors results in no loss of generality, because changing the tangent vector results in a canonically isomorphic construction. The construction was originally defined by Deligne for curves, by Hain for $X$ and by Deligne-Goncharov for unirational varieties.

Let
\begin{eqnarray*}
x, y \in D && \\
u \in T_x \overline{X} && \textrm{non-zero tangent vector} \\
v \in T_x \overline(Y) && \textrm{non-zero tangent vector}
\end{eqnarray*}
\begin{defn}[Paths tangent to given vectors]
Given tangents on $\overline{X}$ as above,
\[
P_{u,v} = \{ \gamma : [0,1] \to \overline{X}(\C) \mid \textrm{$\gamma$ piecewise smooth paths}, \gamma(]0,1[) \subset M, \gamma(0) = x, \gamma(1) = y, \gamma'(x) = u, \gamma'(y) = -v \}
\]
Define $\pi_1(M; u,v)$ as the homotopy classes of $P_{u,v}$.
\end{defn}
Compose two path $\gamma_1 \circ \gamma_2$ by following $\gamma_1$ until $\epsilon$-close to its endpoint, and then circle around an $\epsilon$-ball to arrive at the point where $\gamma_2$ first exits it? \TODO

Let $E$ be a vector bundle on $\overline{X}$ with a unipotent connection $\nabla$ with at most first order poles along $D$. As in Sergey's talk \TODO, we get $\nabla = d - N$ for a nilpotent matrix $N$ with values in $\Omega$.

$E$ is an extension of a trivial vector bundle.

For $\epsilon > 0$ and $[\gamma] \in \pi_1(M; u,v)$, let $\gamma_{\epsilon}$ start in $\epsilon$ and end in $1-\epsilon$ as in Fritz' talk \TODO. 
\begin{defn}
\[
\mathrm{res}(\nabla) := \mathrm{res}(-N) \textrm{~and~} \epsilon^N = \exp(\log(\epsilon)N)
\]
\end{defn}
Define monodromy along $\gamma$ by the regularization:
\[
\int_{\gamma} \nabla := \lim_{\epsilon \to 0} \epsilon^{\mathrm{res}_y(\nabla)} \circ \int_{\gamma_\epsilon} \circ \epsilon^{-\mathrm{res}_x(\nabla)}
\]
It is indeed well-defined. For $\omega_1, \ldots, \omega_n \in \Omega$, define $\int_{\gamma} \omega_1 \cdots \omega_n$ by the monodromy interpretation
\[
N = \left( \begin{array}{cccc}
0 & \omega_1 & \cdots & 0 \\
 & \ddots & \ddots &  \vdots \\
 & &  \ddots & \omega_n \\
 & &     & 0
\end{array}
\right)
\]
Explicitly,
\[
\int_{\gamma} \omega_1 \cdots \omega_n = \lim_{\epsilon \to 0} \sum_{0 \leq i \leq j \leq n} \frac{(-1)^i}{i!(n-j)!} \prod_{l=1}^i \mathrm{res}_y(\omega_l) \cdot \int_{\gamma_{\epsilon}} \omega_{i+1} \cdots \omega_{i+j} \cdot \prod_{l=j+1}^n \mathrm{res}_x(\omega_l) \log(\epsilon)^{i+n-j}
\]
The $\mathrm{iter}$ morphism (Cf. Definition \ref{def:iter}) is well defined for paths from $\pi_1(M;u,v)$. Two steps will define $\pi_1(X;u,v)_H$.
\begin{enumerate}
\item In the first case, suppose that $u=a \in X(k)$. 

Note that $\pi_1(M;a,v)$ is a $\pi_1(M;a)$-torsor. By Alberto's talk \TODO, this implies $\pi_1(M;a,v)^{un}$ is a $\pi_1(M;a)^{un}$-torsor. Recall that
\[
\cO(\pi_1(M;a,v)^{un}) = \lim_{n \to \infty} \Q[\pi_1(M;a,v)/I^{n+1}\Q[\pi_1(M;a,v)]^v.
\]
Then $\mathrm{iter}$ factors through quotients by powers of the augmentation ideal $I^{n+1}$. Dualizing gives an isomorphism $\iterch$. Taking the limit as $n$ approaches infinity and tensoring with $\C$ gives a morphism of $\C$-vector spaces $\iterch : \cO(\pi_1(M;a,v)^{un}) \otimes_{\Q} \C \to T(\Omega) \otimes_k \C$. 

One can check that $\iterch$ is a $\C$-algebra morphism using the composition of path formula by the monodromy interpretation, and that it respects the actions of $\cO(\pi_1(X;a)^{un})$ on $\cO(\pi_1(X;a,v)^{un})$ and $\cO(\pi_1(X;u,a))$ by the following diagram from torsor theory:
\[
\xymatrix{
\pi_1(X;a)^{un} \ar[d] \ar[r]^{\mathrm{comp}} & T(U) \otimes_k \C \ar[d] \\
\pi_1(X;a,v)^{un} & T(U) \otimes_k \C \ar[l]^{\mathrm{iter}^\vee}
}
\]
Hence there is a morphism of torsors $\spec \iterch : \pi_1(M;a,v)^{un} \times_{\Q} \C \to \spec T(\Omega) \times_k \C$ which respects isomorphisms of pro-unipotent groups $un \to B \stackrel{comp}{\to} dR \to T(\Omega)$. $\pi_1(M;a)^{un} \times_{\Q} \C \cong \spec T(\Omega) \times_k \C$. Therefore $\spec \iterch$ is an isomorphism. The weight filtration on $\cO(\pi_1(M;a,v)^{un})$ is two times the unipotent filtration \TODO induced by action of $\pi_1(M;a)^{un}$. There is a Hodge filtration by the isomorphism $\spec \iterch$. This mixed Hodge structure is in fact a mixed Tate-Hodge structure using the unipotent filtration imitating the previous example, hence $\cO(\pi_1(M;a,v)^{un}) \in ind(\MTH)$.

\item In the second case, suppose that both $u,v \in D(\C)$. $\mathrm{iter}$ and $\mathrm{iter}^{\vee}$ give morphisms as before. Let
\[
\pi_1(X;u,v) \colonequals \pi_1(X;u,v)^{un} \qquad \pi_1(X;u,v)_{dR} = T(\Omega)
\]
To show that $\iterch$ is an isomorphism, form the product of right and left $\pi_1(X;a)_B$-torsors quotiented by the relation $(g_1 g, g_2) = (g, g_1 g_2)$ gives
\[
\pi_1(M;u,v)_B \cong \pi_1(X;u,a)_B \times \pi_1(X;a,v)_B / \sim
\]
Now use the comparison isomorphism between the Betti and de Rham realizations of $\pi_1(M;a,v)$. This leads to an affine $\MTH$-scheme $\pi_1(X;u,v)_H$ with a groupoid structure and with non-negative weights.

\begin{lemma}
 $\Q(1)_H \to \pi_1(X;u)_H$ of affine $\MTH$-schemes.
\end{lemma}

\end{enumerate}

\section{Multiple zeta values are periods}
The multiple zeta values are periods of a mixed Tate-Hodge structure over $\Q$ with non-negative weights.

Let $[\gamma_x] \in \pi_1(X;u)$ be a simple loop around $x$. Write $\Q(1)_H$ also for $\pi_1(\Pspace^1 \setminus \{0,\infty\},a)_H$ where $a \in \Pspace^1(\Q) \setminus \{0,\infty\}$.
\[
\int_{\gamma_x} \nabla = \exp(2\pi i \mathrm{res}_x(\nabla))
\]
\[
\Q(1)_H = \pi_1(X)
\]

\begin{lemma}
The loop $\gamma_x$ induces a morphism,
\[
\Q(1)_H \to \pi_1(X;u)_H,
\]
in $\mathrm{MHT}(k)$. 
\end{lemma}
\begin{proof}[Idea]
The Betti realization $n \mapsto \gamma_x^n \in \pi_1(M;u)$ induces
\[
\cO(\Q(1)_B) = \cO(\Z^{un}) \to \cO(\pi_1(M;u)^{un}) = \cO(\pi_1(X;u)_B)
\]
where $\Z^{un} = \Ga$. The de Rham realization $\mathrm{res}_x : \Omega \to k$ induces
\[
\cO(\pi(X;u)_{dR}) = T(\Omega) \to T(k) = \cO(\Q(1)_{dR}).
\]
One can check that $\cO(\Q(1)_B) \to \cO(\pi_1(X;u)_B)$ and $\cO(\pi_1(X;u)_{dR}) \to \cO(\Q(1)_{dR})$ commute vertically. Using the definition of iterated integrals via the monodromy interpretation and the fact that the morphism $\mathrm{comp}$ is induced by $\iterch$ gives
\[
\cO(\Q(1)_H) = T(H_2(\Pspace^1)) = T(\Q(-1)) \qquad \pi_1(\Pspace \setminus \{0,\infty\},a)_{dR} = \Ga
\]
\end{proof}

Now let $D = \{0,1,\infty\}$, $k=\Q$ and $\Omega = \frac{dz}{z} \Q \otimes \frac{dz}{z-1}\Q$. Let $\overline{n} = (n_1, \ldots, n_k), n_k \geq 2$.

As as in talk 1 (Cf. Definition \ref{def:word}), this corresponds to a word $w(\overline{n})$ in $0$ and $1$ starting in $0$ and ending in $1$. As in Definition \ref{def:diffformswords}, let $\overline{w} = w(\overline{n})$ sequence in $w_0 = {dz}{z}$ and $w_1 = \frac{dz}{1-z}$.

\begin{defn}[The path dch]\label{def:dch}
Let $\mathrm{dch}$ denote the real interval [0,1] viewed as a path from 0 to 1. Hence $[(dch)] \in \pi_1(X;0,1) := \pi_1(X; \overrightarrow{01}, \overrightarrow{10})$.
\end{defn}

